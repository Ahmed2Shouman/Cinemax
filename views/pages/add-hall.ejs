<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinemax Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/Style/main.css">
    <link rel="stylesheet" href="/Style/Pages/admin/add.css">
</head>
<body>
  <%- include('../partials/adminNav') %>

  <main class="add-movie-container">
    <h1 class="page-title">Add New Hall for Theater: <%= theater.name %></h1>
    <form action="/admin/theaters/<%= theater.id %>/add-hall" method="POST" class="add-movie-form">
      <div class="form-group">
        <label for="name">Hall Name</label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label>Features</label>
        <div class="checkbox-group">
          <input type="radio" id="imax" name="features" value="IMAX" checked>
          <label for="imax">IMAX</label>
          <input type="radio" id="4dx" name="features" value="4DX">
          <label for="4dx">4DX</label>
          <input type="radio" id="gold" name="features" value="Gold">
          <label for="gold">Gold</label>
        </div>
      </div>

      <div class="form-group">
        <label for="seat_rows">Number of Rows</label>
        <input type="number" id="seat_rows" name="seat_rows" required min="1">
      </div>

      <div class="form-group">
        <label for="seat_columns">Number of Columns</label>
        <input type="number" id="seat_columns" name="seat_columns" required min="1">
      </div>

      <div class="form-group">
        <label for="chairs_in_section">Chairs in Section</label>
        <input type="number" id="chairs_in_section" name="chairs_in_section" required min="1">
      </div>

      <div class="form-group">
        <label for="price_per_seat">Price Per Seat</label>
        <input type="number" id="price_per_seat" name="price_per_seat" required min="1" step="0.01">
      </div>

      <button type="submit" class="btn btn-primary">Add Hall</button>
    </form>
  </main>

  <%- include('../partials/cr') %>
  <script src="/Scripts/main.js"></script>
</body>
</html>
